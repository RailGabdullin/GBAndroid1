<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="indicators_unit_text_style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/indicator_text_size</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="indicators_value_text_style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/indicator_value_size</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorMenuDark</item>
        <item name="colorAccent">@color/colorDeepOrange</item>
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>
</resources>
